{
  "expo": {
    "scheme": "acme",
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": false
          },
          "ios": {
            "newArchEnabled": false,
            "usesIcloudStorage": false,
            "infoPlist": {
              "UIBackgroundModes": [
                "audio",
                "remote-notification"
              ],
              "UIStatusBarStyle": "UIStatusBarStyleLightContent",
              "UIViewControllerBasedStatusBarAppearance": false
            }
          }
        }
      ],
      "expo-asset",
      "expo-localization"
    ],
    "name": "KRadio24",
    "slug": "kradio24",
    "icon": "./assets/images/logo.png",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "locales": {
      "ko": {
        "name": "한국라디오24"
      },
      "en": {
        "name": "KRadio24"
      }
    },
    "userInterfaceStyle": "automatic",
    "android": {
      "permissions": [
        "INTERNET",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "INTERNET",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ],
      "usesCleartextTraffic": true,
      "statusBar": {
        "backgroundColor": "#000000",
        "barStyle": "light-content"
      },
      "package": "com.kradio24.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#000000"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kradio24.app",
      "icon": "./assets/images/logo.png",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "UIStatusBarStyle": "UIStatusBarStyleLightContent",
        "UIViewControllerBasedStatusBarAppearance": false
      }
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c3d39c5f-baaa-46d0-b300-e8bc0ccba0ab"
      }
    }
  }
}
